
@{
    ViewBag.Title = "Index";
}

<h3 class="display-4 mt-4">Lista de Categorias</h3>

<div class="row">
    <div class="col-12">
        <a href="/categoria/cadastro" class="btn btn-primary float-right mb-3">
            <i class="fas fa-plus"></i> Cadastrar Categoria
        </a>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Model.Categoria categoria in ViewBag.Categorias)
            {
                <tr>
                    <td>@categoria.Id</td>
                    <td>@categoria.Nome</td>
                    <td>
                        <a class="btn btn-secondary" href="/categoria/alterar?id=@categoria.Id">
                        <i class="fa fa-edit"></i>Alterar
                        </a>
                        <a class="btn btn-danger" href="categoria/apagar?id=@categoria.Id">
                        <i class="fa fa-trash"></i>Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot class="thead-dark">
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Ação</th>
            </tr>
        </tfoot>
    </table>

</div>

