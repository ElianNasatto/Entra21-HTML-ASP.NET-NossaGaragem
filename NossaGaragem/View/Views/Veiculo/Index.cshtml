
@{
    ViewBag.Title = "Index";
}

<h3 class="display-4 mt-3">Lista de Veiculos</h3>

<div class="row mb-3">
    <div class="col-12">
    <a href="/veiculo/cadastro" class="btn btn-primary float-right mb-3">
        <i class="fas fa-plus"></i> Novo Veiculo
    </a>
    </div>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Categoria</th>
            <th>Modelo</th>
            <th>Preco</th>
            <th>Ação</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Veiculo veiculo in ViewBag.Veiculos)
        {
        <tr>
            <td>@veiculo.Id</td>
            <td>@veiculo.Categoria.Nome</td>
            <td>@veiculo.Modelo</td>
            <td>@veiculo.Valor</td>
            <td>
            <a class="btn btn-secondary" href="/veiculo/atualizar/?id=@veiculo.Id">
                <i class="fa fa-edit"></i>Alterar
            </a>

            <a class="btn btn-danger" href="/veiculo/apagar?id=@veiculo.Id">
                <i class="fas fa-trash"></i>Apagar
            </a>
            </td>
        </tr>
        }

    </tbody>

    <tfoot class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Categoria</th>
            <th>Modelo</th>
            <th>Preco</th>
            <th>Ação</th>
        </tr>
    </tfoot>

</table>

</div>