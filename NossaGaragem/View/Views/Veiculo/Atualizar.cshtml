
@{
    ViewBag.Title = "Atualizar";
}

<h2 class="display-4">Atualizar</h2>

<form action="/veiculo/update" method="post">
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label class="form-check-label" for="campo-modelo">Modelo</label>
                <input type="text" value="@ViewBag.Veiculo.Modelo" name="modelo" class="form-control" />

                <label class="form-check-label" for="campo-valor">Valor</label>
                <input type="text" value="@ViewBag.Veiculo.Valor" name="valor" class="form-control" />

            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="campo-categoria">Categoria</label>
        <select class="form-control" name="categoria">
            <option disabled="disabled" selected="selected">Selecione uma categoria</option>

            @foreach (Model.Categoria categoria in ViewBag.Categoria)
            {
                if (categoria.Id == ViewBag.Veiculo.IdCategoria)
                {
                    <option value="@categoria.Id" selected="selected">@categoria.Nome</option>
                }
                else
                {
                    <option value="@categoria.Id">@categoria.Nome</option>
                }
            }
        </select>
        <button type="submit" class="btn btn-success mt-2">
            <i class="fa fa-save"></i> Salvar
        </button>
    </div>
    <input type="text" hidden="hidden" value="@ViewBag.Veiculo.Id" name="id" />
</form>
